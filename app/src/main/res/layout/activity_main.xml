                android:layout_height="50dp"
                android:background="@color/colorAccent"/>


            <RelativeLayout
                android:background="#ff00"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
